$body-font-family = 'Montserrat'
$heading-font-family = 'Playfair Display', serif;
$headings = {
  h1: { size: 5vw, weight: 700, line-height: 1, letter-spacing: -.02em, font-family: $heading-font-family },
  h2: { size: 56px, weight: 400, line-height: 1.35, letter-spacing: -.02em, font-family: $heading-font-family },
  h3: { size: 3vw, weight: 300, line-height: 48px, letter-spacing: normal, font-family: $heading-font-family },
  h4: { size: 34px, weight: 400, line-height: 40px, letter-spacing: normal, font-family: $heading-font-family },
  h5: { size: 24px, weight: 500, line-height: 32px, letter-spacing: normal, font-family: $body-font-family },
  h6: { size: 20px, weight: 300, line-height: 1, letter-spacing: .02em, font-family: $body-font-family },
  subheading: { size: 16px, weight: 400 },
  body-2: { size: 14px, weight: 500 },
  body-1: { size: 1.3vw, weight: 300 },
  caption: { size: 12px, weight: 400 },
  button: { size: 14px, weight: 500 }
}

// Spacing
// ============================================================
$spacer := 16px
$spacer-x := $spacer
$spacer-y := $spacer
$spacers := {
  zero: {
    x: 0,
    y: 0
  },
  one: {
    x: ($spacer-x * .25),
    y: ($spacer-y * .25)
  },
  two: {
    x: ($spacer-x * .5),
    y: ($spacer-y * .5)
  },
  three: {
    x: $spacer-x,
    y: $spacer-y
  },
  four: {
    x: ($spacer-x * 1.5),
    y: ($spacer-y * 1.5)
  },
  five: {
    x: ($spacer-x * 3),
    y: ($spacer-y * 3)
  },
  six: {
    x: ($spacer-x * 5),
    y: ($spacer-y * 5)
  }

}



@require '~vuetify/src/stylus/main.styl'
